<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if enhanced_cart.size == 0 %>
    <div class="alert alert-warning" role="alert">
      Your cart is empty! browse our products <%= link_to 'here', '/' %>
    </div>
  <% else %>
    <%= render 'cart_content' %>
  <% end %>

</section>
